<div data-product-id="<%= @product.id %>">
  <p></p><br>
  <p></p>

  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <%= image_tag @product.image_url, class: "img-responsive img-zoom", data_zoom_image: "@product.image_url" %>
  </p>

  <p>
    <strong>Size:</strong>
    <%= @product.size %>
  </p>

  <p>
    <strong>Price:</strong>
    $ <%= @product.price %>
  </p>

  <p>
    <strong>Views:</strong>
    <%= @product.views %>
  </p>

  <strong>Average Rating:
    <div id="average-rating" class="rated" data-score="<%= @product.average_rating %>"></div>
  </strong><br><br>

  <%= form_with(url: '/payments/create') do |form| %>
    <%= render partial: "shared/stripe_checkout_button" %>
  <% end %><br><br>

  <!-- <p>Highest Rating:
    <<%= @product.highest_rating_comment&.rating %><br><br>
  </p>

  <p>Lowest Rating:
    <%= @product.lowest_rating_comment&.rating %><br><br>
  </p>
  -->
  <%= render 'new_comment' %><br><br>

  <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>

  <%= render 'comments' %><br>

  <%= link_to 'Back', products_path %>
</div>
